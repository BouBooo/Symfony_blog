{% extends 'base.html.twig' %}

{% block body %}

    <article>
        <h2>{{ article.title }}</h2>
            <div class="metadata">
                <p>Ecrit le {{ article.createdAt | date('d/m/Y') }}, à {{ article.createdAt | date('H:i') }} dans la catégorie {{ article.category.title }}</p>
            </div>
            <div class="container">
                <img src="{{ article.image }}" alt=""/>
                    {{ article.content | raw}}
            </div>

            <section id="commentaires">
                {% for comment in article.comments %}
                <div class="comment">
                    <div class="row">
                        <div class="col-3">
                            {{ comment.author }} - {{ comment.createdAt | date('d/m/Y') }}
                        </div>
                        <div class="col">
                            {{ comment.content | raw }}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </section>
    </article>

{% endblock %}